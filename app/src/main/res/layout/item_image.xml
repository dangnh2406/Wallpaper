<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:id="@+id/item_image"
    >

    <ImageView
        android:id="@+id/item_avt_img"
        android:adjustViewBounds="true"
        android:background="@drawable/ic_launcher_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:background="@color/white_opacity"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/item_avt_img">
        <ImageView
            android:id="@+id/item_favorite_img"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_baseline_favorite_border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />
        <TextView
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/item_favorite_img"
            android:drawableLeft="@drawable/ic_baseline_remove_red_eye"
            android:id="@+id/item_view_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </RelativeLayout>
</RelativeLayout>